<div id="wrapper" class="panel color0 span-4">
<section class="log-in ">
  <div class="">
        <h2 class="" >Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "log-in-form"})  do |f| %>
          <div class="">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="actions">
            <%= f.button :submit, "Log in" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
  </div>
</section>
</div>