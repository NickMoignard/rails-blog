<p id="notice"><%= notice %></p>

<%= link_to 'New Post', new_post_path %><br><br>



  <tbody>
    <% @posts.each do |post| %>
        <%= post.user.username %><br>
        <%= post.title %><br>
        <%= post.caption %><br>
        <%= link_to image_tag(post.image.url, class: 'media-object'), post.image.url, targer: '_blank'%>
        <%= post.body %><br><br>
        <%= link_to 'Show', post %></td>

        <% if current_user.email == post.user.email%>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      
    <% end %>


